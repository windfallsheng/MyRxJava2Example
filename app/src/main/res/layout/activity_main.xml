<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:alignmentMode="alignBounds"
        app:columnCount="2"
        app:orientation="horizontal"
        app:rowCount="5"
        app:useDefaultMargins="false">

       <!-- <TextView
            android:gravity="right|bottom"
            android:text="0"
            android:textColor="#9D9D9D"
            app:layout_columnSpan="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="3" />-->

        <TextView
            android:id="@+id/textview_go_to_create"
            android:text="Create"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            style="@style/Text_Bg_Normal" />

        <TextView
            android:id="@+id/textview_go_to_transform"
            style="@style/Text_Bg_Normal"
            android:text="Transform"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/textview_go_to_combine"
            style="@style/Text_Bg_Normal"
            android:text="Combine"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/textview_go_to_filter"
            style="@style/Text_Bg_Normal"
            android:text="Filter"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="â€”"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/Text_Bg_Normal"
            android:text="+"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_margin="1dp"
            android:background="#f68904"
            android:gravity="center"
            android:text="="
            android:textColor="#ffffff"
            app:layout_columnWeight="1"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="%"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="."
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>
</RelativeLayout>
